<?xml version="1.0" encoding="utf-8"?>
<com.example.MacGo.RippleView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/rowHeight"

    android:clickable="true"
    ripple:rv_type="rectangle"
    ripple:rv_rippleDuration="@integer/ripple_duration"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/textMarginStart"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingTop="@dimen/textPaddingTopBottom"
        android:paddingBottom="@dimen/textPaddingTopBottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="LargeText"
            android:id="@+id/purchase_desc"
            android:textColor="@android:color/white"
            android:textSize="@dimen/primaryTextSize"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:id="@+id/purchase_date"
            android:textColor="@color/white"
            android:text="January 0 2015"
            android:textSize="@dimen/secondaryTextSize"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceListItem"

        android:hint="$0.00"
        android:paddingTop="@dimen/textPaddingTopBottom"
        android:paddingBottom="@dimen/textPaddingTopBottom"
        android:layout_centerInParent="true"
        android:textSize="@dimen/primaryTextSize"
        android:layout_marginEnd="@dimen/textMarginStart"
        android:textColor="@android:color/white"
        android:id="@+id/purchase_cost"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        />

</com.example.MacGo.RippleView>