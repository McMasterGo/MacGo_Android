<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_passcodeLabel"
        android:hint="@string/passcode_new_text"
        android:textAppearance="?android:textAppearanceMedium"
        android:gravity="center"
        android:textColor="@android:color/white"
    />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:gravity="center"
        android:id="@+id/passcodeField"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_passcodeValue1"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:textAppearance="?android:textAppearanceLarge"
            android:maxLength="1"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/et_passcodeValue2"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:textAppearance="?android:textAppearanceLarge"
            android:maxLength="1"
            android:gravity="center"
            android:focusable="false"
            />
        <EditText
            android:id="@+id/et_passcodeValue3"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:textAppearance="?android:textAppearanceLarge"
            android:maxLength="1"
            android:gravity="center"
            android:focusable="false"
            />
        <EditText
            android:id="@+id/et_passcodeValue4"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            android:focusable="false"
            />
    </LinearLayout>

</LinearLayout>